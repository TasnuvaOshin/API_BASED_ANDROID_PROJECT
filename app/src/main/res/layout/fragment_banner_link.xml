<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminPanel.BannerSetting.BannerLinkFragment">


   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Enter Banner One Link"
       android:textSize="18sp"
       android:textStyle="bold"
       android:textAlignment="center"
       android:layout_marginTop="105dp"
       />

    <EditText
        android:id="@+id/banner_one_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:padding="8dp"
        android:hint="Enter Link "
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Banner Two Link"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:id="@+id/banner_two_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:padding="8dp"
        android:hint="Enter Link "
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        />

    <Button
        android:id="@+id/banner_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:text="Submit"
        android:padding="6dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="16sp"

        />
</LinearLayout>