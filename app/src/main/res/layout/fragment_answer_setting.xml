<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminPanel.QuizSetting.AnswerSettingFragment">
    <EditText
        android:id="@+id/answer_matchno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:padding="8dp"
        android:hint="Enter match no"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:inputType="number"
        />
   <EditText
       android:id="@+id/answer_one"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#eee"
       android:padding="8dp"
       android:hint="Enter Answer For Question One "
       android:textAlignment="center"
       android:layout_marginTop="105dp"
       android:layout_marginStart="15dp"
       android:layout_marginEnd="15dp"
       />
    <EditText
        android:id="@+id/answer_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:padding="8dp"
        android:hint="Enter Answer For Question Two"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <Button
        android:id="@+id/answer_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:padding="16dp"
        />
</LinearLayout>